<a class="card h-100" href="{{post.link}}">
	<div class="card-body d-flex flex-column">
		<h5 class="card-title">{{post.title}}</h5>
		<div class="flex-grow-1">
			<p class="card-text">{{post.content(0, 20)}}</p>
		</div>
		<div class="tags">
			{% for tag in post.tags %}
				<div class="badge badge-secondary">
					{{tag.title}}
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="card-footer">
		<i aria-hidden="true" class="fas fa-calendar-alt mr-2"></i>
		<span title="published">{{ post.date }}</span>
		{% if not (post.date == post.modified_date) %}
			<b>&nbsp;&middot;&nbsp;</b>
			<span title="last modified">{{ post.modified_date }}</span>
		{% endif %}
	</div>
</a>
