{# This file demonstrates using most of the index.twig template and modifying
   just a small part. See `search.twig` for an example of another approach #}

{% extends "index.twig" %}

{% block content %}
	<h1 class="my-5">{{title}}</h1>
	<div class="row">
		<div class="col-md-8 order-md-last mb-3">
			<div class="row row-cols-1 row-cols-md-2">
				{% for post in posts %}
					<div class="col mb-4">
						{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
					</div>
				{% endfor %}
			</div>
		</div>

		<div class="col-md-4 order-md-first mb-3">
			<div class="card">
				<div class="card-header">
					All Categories
				</div>
				{% include "partial/category-tree.twig" with {categories:categories, active: cat} %}
			</div>
		</div>
	</div>
{% endblock %}
